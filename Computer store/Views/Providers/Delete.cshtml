@using Computer_store.Domain.Entities;
@model Provider
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Delete Category</title>
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ComputerStore.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container-fluid d-flex align-items-center justify-content-center flex-column" style="min-height: 100vh;">
        <main role="main" style="width: 400px" class="mt-5">
            <div class="card">
                <div class="card-body ps-5 pe-4">
                    <h1 class="mb-4">Delete Category</h1>
                    <h3 class="mb-4">Are you sure you want to delete this?</h3>
                    <div>
                        <h4>Category</h4>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-4">Name</dt>
                            <dd class="col-sm-8">@Model.Name</dd>
                            <dt class="col-sm-4">Description</dt>
                            <dd class="col-sm-8">@Model.Description</dd>
                        </dl>
                        <div style="display:grid; grid-template-columns:1fr 1fr; gap:30px;">
                            <button onclick="goBack()" class="btn btn-secondary" style="width:100%;">Back</button>
                            <form asp-action="DeleteConfirmed">
                                <input type="hidden" asp-for="Id" />
                                <button type="submit" class="btn btn-danger" style="width:100%;">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
    <script type="text/javascript">
        function goBack() {
            window.history.back()
        }
    </script>
</body>
</html>
