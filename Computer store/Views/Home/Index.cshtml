@using System.Security.Claims
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin</title>
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ComputerStore.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container-fluid d-flex align-items-center justify-content-center flex-column" style="min-height: 100vh;">
        <main role="main" class="mt-5">
            <div class="card">
                <div class="card-body ps-5 pe-4">
                    <div class="d-flex align-items-center justify-content-center" style="gap:15px; margin-bottom:30px;">
                        <form method="post" asp-controller="Home" asp-action="Back">
                            <button class="btn btn-secondary" type="submit">Back</button>
                        </form>
                        <h1 style="margin:0;">Work Panel</h1>
                    </div>
                    <div class="d-flex" style="gap:10px">
                        @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                        {
                            <form method="post" asp-controller="Pages" asp-action="Products" class="mb-2">
                                <button type="submit" class="btn btn-primary btn-block">Products</button>
                            </form>
                            <form method="post" asp-controller="Pages" asp-action="Categories" class="mb-2">
                                <button type="submit" class="btn btn-primary btn-block">Categories</button>
                            </form>
                            <form method="post" asp-controller="Pages" asp-action="Providers" class="mb-2">
                                <button type="submit" class="btn btn-primary btn-block">Providers</button>
                            </form>
                            <form method="post" asp-controller="Pages" asp-action="Sales" class="mb-2">
                                <button type="submit" class="btn btn-primary btn-block">Sales</button>
                            </form>
                            <form method="post" asp-controller="Pages" asp-action="Users" class="mb-2">
                                <button type="submit" class="btn btn-primary btn-block">Users</button>
                            </form>
                        }
                        @if (User.IsInRole("Seller"))
                        {
                            <form method="post" asp-controller="Pages" asp-action="Products" class="mb-2">
                                <button type="submit" class="btn btn-primary btn-block">Sell products</button>
                            </form>
                        }
                        <form method="get" asp-controller="Users" asp-action="ChangePassword" asp-route-id="@User.FindFirst(ClaimTypes.NameIdentifier)?.Value" class="mb-2">
                            <button type="submit" class="btn btn-primary btn-block">Change Password</button>
                        </form>
                    </div>
                </div>
            </div>
        </main>
    </div>
</body>
</html>